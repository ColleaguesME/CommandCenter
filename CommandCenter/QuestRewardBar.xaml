<UserControl x:Class="CommandCenter.QuestRewardBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommandCenter"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="230">
    <Grid VerticalAlignment="Center" Width="230">
        <TextBlock x:Name="textBlockQuantity" Text="" MaxWidth="170" Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap"/>
        <Button x:Name="buttonClaim" Content="Claim" Margin="170, 0, 20, 0" Height="20" Click="buttonClaim_Click"/>
    </Grid>
</UserControl>
